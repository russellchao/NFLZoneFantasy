FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port 3002
EXPOSE 3002

# Set environment variables for React dev server
ENV HOST=0.0.0.0
ENV PORT=3002

# Start in development mode with hot reloading
CMD ["npm", "start"]